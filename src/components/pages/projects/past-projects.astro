  pastProjects = fallbackProjects.map((project: any) => {
    const paragraphs = splitContentIntoParagraphs(project.content).map(paragraph => {
      return highlightKeywords(paragraph, project.keywords || []);
    });

    return {
      ...project,
      paragraphs: paragraphs
    };
  });
}


          })),
          videos: (typeof post.youtube_videos === 'string' ? JSON.parse(post.youtube_videos) : post.youtube_videos || []).map((url: string, index: number) => ({
            id: `youtube-${index}`,
            title: `Video ${index + 1}`,
            description: `YouTube video ${index + 1}`,
            youtubeId: extractYouTubeId(url)
          }))
        };
      });
    }
  }
} catch (error) {
